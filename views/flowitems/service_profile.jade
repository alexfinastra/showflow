li.timeline-item
  .timeline-badge(class='#{item["type"]}') 
    i.fa.fa-expand
  .timeline-panel(class='#{item["type"]}')
    .timeline-heading
      h5.text-light.timeline-title #{item["name"]}       
    .timeline-body
      if item["timestamp"].length > 0      
        p.small.mt-3
          span.rounded.bg-secondary.text-light.p-1.pl-2.pr-2 timestamp : 
            b #{item["timestamp"]}
      p.small.mt-3
        span.rounded.bg-light.text-dark.p-1.pl-2.pr-2 step : 
          b #{item["group"]}
      p.small.mt-3
        span.rounded.bg-light.text-dark.p-1.pl-2.pr-2 type : 
          b #{item["type"]}
      br
      p.small.text-light
        | #{item["description"]}
      br
      if item["features"].indexOf("flowmanagement") > -1
        include flowstopper
      a.btn.btn-dark.float-right.hidden(href='#')
        i.fas.fa-info
        span.ml-2 
        | show details 