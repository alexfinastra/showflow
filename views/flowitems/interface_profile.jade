  .timeline-badge(class=item["status_class"])
    i.fa.fa-exchange
  .timeline-panel
    .timeline-heading
      if profile == null
        //.row.justify-content-end         
        //  - var purl = "/interface/profile/" + item["id"]
        //  a.btn.btn-link.col-auto(href=purl)
        //    i.fa.fa-pencil
