        //    i.fa.fa-arrow-up 
        //  a.btn.btn-link.col-auto(href=purl)
        //    i.fa.fa-trash-o     
        .row
          - var purl = "/interface/profile/" + item["uid"]
          a.btn.btn-link.col-auto(href=purl)
            i.fa.fa-pencil
          h5.timeline-title.mt-2.col-auto.mr-auto #{item["title"]}                   
      else
        h5.timeline-title #{item["title"]}      
      p
        small.text-muted
          i.fa.fa-certificate
          span.ml-2 
          | not certified
    .timeline-body
      p.small
        | #{item["description"]}
      br
      - var target = (item["request_protocol"] == "MQ") ? 'queue' : 'folder'
      - var dhref = "/"+ target +"/list/" + item["uid"]
      - var uhref = "/" + target + "/upload/" + item["uid"]
      - var btn_class = "btn-outline-" + item["status_class"] 
      a.btn.float-left(href=uhref, class=btn_class)
          span 
            b From 
            | interface
      a.btn.float-right(href=dhref, class=btn_class)
          span 
            b To 
            | interface 