    else
      each key in Object.keys(data) 
        br
        br
        h4 #{key} 
        br            
        table.table.table-hover
          .container
            thead
              tr.row.text-dark
                th.col.col-md-4 Name
                th.col.col-md-6 Description
                th.col.col-md-2 
            tbody  
              each obj in data[key]
                tr.row.text-dark
                  td.col.col-md-4
                    b #{obj["title"]}
                  td.col.col-md-6.cut-text #{obj["description"]}
                  td.col.col-md-2                    
                    - var href = "/" + identity["type"] + "/profile/" + obj["uid"]
                    a.btn.btn-success.btn-sm.hoverbutton(href= href)
