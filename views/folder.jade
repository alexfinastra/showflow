extends layout

block content
  .container(id="upload-container", data-row = options["row_id"])
    if options["exports"] != true
      .row
        col-md-2
          button.btn.btn-link(onclick="goBack()")
            i.fa.fa-arrow-circle-left.fa-2x.mr-2
        col-md-10
          h2.mt-1=title
      br
    if options["upload"] == true
      br      
      .row
        .col-md-8
          input.filestyle.col-sm-9(type="file", name="file", data-text="Select file for upload...", data-btnClass="btn-outline-primary", data-buttonBefore="true", data-placeholder="No file")                         
        
      br
      .row
        .col-md-8
          .progress.mt-2.invisible
            .progress-bar.progress-bar-striped.progress-bar-animated(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 0%; height: 20px;')        
    else
      blockquote
        if options["exports"] == true        
          a.btn.btn-outline-primary.mt-2( href= "/folder/exports/new")
            i.fa.fa-cogs
            span.ml-2 
            | Create setup script
    br
    if files.length == 0
      p The folder is empty ! ;)
    else
      table.table
        thead
          tr.row
            th.col-md-5 Name
            th.col-md-2 Size
            th.col-md-2 Created
            th.col-md-3 
        tbody
          for file in files      
            tr.row        
              th.col-md-5(scope="row") #{file["name"]}
              td.col-md-2 #{file["size"]}
              td.col-md-2 #{file["created"]}
              td.col-md-3                 
                //if options["upload"] == true
                  //a.btn.btn-outline-primary.mr-3.mt-0.btn-sm.float-right( href= "/folder/download/"  + file["id"] +"/" + file["name"] ) Download
                  //a.btn.btn-outline-success.mr-3.mt-0.btn-sm.float-right( href= "/folder/download/"  + file["id"] +"/" + file["name"] ) Run again  
                //else
                a.btn.btn-outline-danger.btn-sm.mt-0.float-right( href= "/folder/delete/" + file["id"] +"/" + file["name"] ) Delete
                a.btn.btn-outline-primary.mr-3.mt-0.btn-sm.float-right( href= "/folder/download/"  + file["id"] +"/" + file["name"] ) Download 